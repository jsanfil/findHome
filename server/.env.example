# Server Configuration
PORT=3001
APP_URL=http://localhost:3001

# Query Parser Configuration
# Choose which parser to use: 'rule-based', 'openai', 'openrouter', 'anthropic'
QUERYPARSER_TYPE=rule-based

# Debug Configuration
# Set to 'true' to enable detailed logging of LLM requests and responses
DEBUG_PARSERS=false

# OpenAI Configuration (only needed if using OpenAI parser)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# OpenRouter Configuration (only needed if using OpenRouter parser)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-haiku
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_MAX_TOKENS=1000

# Anthropic Configuration (only needed if using Anthropic parser)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=1000
